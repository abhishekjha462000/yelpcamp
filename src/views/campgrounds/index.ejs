<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campgrounds</title>
    <link rel="stylesheet" href="/campgrounds/css/index.css">
</head>

<body>
    <div class="container">
        <header>
            <h1>All Campgrounds</h1>
            <a href="/campgrounds/new" class="btn-create">Create New Campground</a>
        </header>

        <ul class="campground-list">
            <% for (let campground of campgrounds) { %>
                <li class="campground-item">
                    <h4>
                        <a href="/campgrounds/<%= campground._id %>">
                            <%= campground.title %>
                        </a>
                    </h4>
                </li>
                <% } %>
        </ul>
    </div>
</body>

</html>